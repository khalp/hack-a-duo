<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/anchor_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/btn_orange_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tile_orange_unlit"
        app:layout_constraintBottom_toTopOf="@+id/anchor_p2"
        app:layout_constraintEnd_toStartOf="@+id/anchor_p2"/>

    <ImageView
        android:id="@+id/btn_green_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tile_green_unlit"
        app:layout_constraintBottom_toTopOf="@+id/anchor_p2"
        app:layout_constraintStart_toEndOf="@+id/anchor_p2"/>

    <ImageView
        android:id="@+id/btn_blue_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tile_blue_unlit"
        app:layout_constraintEnd_toStartOf="@+id/anchor_p2"
        app:layout_constraintTop_toBottomOf="@+id/anchor_p2" />

    <ImageView
        android:id="@+id/btn_yellow_p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/tile_yellow_unlit"
        app:layout_constraintStart_toEndOf="@+id/anchor_p2"
        app:layout_constraintTop_toBottomOf="@+id/anchor_p2" />
</androidx.constraintlayout.widget.ConstraintLayout>
